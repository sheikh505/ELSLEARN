<h1>Listing courses</h1>
<div class="listing-holder">
<table class="table table-condensed">
  <tr>
    <th>Name</th>
    <th>Degree</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= DegreeCourseAssignment.find_by_course_id(course.id).degree.name %></td>

    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>


<%= link_to 'New Course', new_course_path, class: 'btn btn-large btn-inverse' %>
