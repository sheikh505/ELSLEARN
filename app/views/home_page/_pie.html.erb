<style type="text/css">
    ${demo.css}
</style>

     <script>

      $(function () {

          // Radialize the colors
          Highcharts.getOptions().colors = Highcharts.map(Highcharts.getOptions().colors, function (color) {
              return {
                  radialGradient: { cx: 0.5, cy: 0.3, r: 0.7 },
                  stops: [
                      [0, color],
                      [1, Highcharts.Color(color).brighten(-0.3).get('rgb')] // darken
                  ]
              };
          });

          // Build the chart
          $('#container1').highcharts({
              chart: {
                  plotBackgroundColor: '#f0f0f0',
                  backgroundImage: null,
                  plotBorderWidth: 1,
                  plotShadow: false
              },
              title: {
                  text: 'User Roles Percentage'
              },
   /*           subtitle: {
                  text: "this is a subtitle"
              }, */
              tooltip: {
                  //the text format in tool tip on hover
                  pointFormat: '{series.name}:: <b>{point.percentage:.2f}%</b>'
              },
              plotOptions: {
                  pie: {
                      backgroundImage: null,
                      allowPointSelect: true,
                      cursor: 'pointer',
                      dataLabels: {
                          enabled: true,
                          format: '<b>{point.name}</b>: {point.percentage:.2f} %',
                          style: {
                              color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'grey'
                          },
                          showInLegend: true
//		connectorColor: 'blue'

                      }

                  }
              },
              series: [{
                  type: 'pie',
                  showInLegend: true,
                  name: 'User Ratio',
                  //color: 'yellow', of selected slice
                  data: [


                      ['Admin',   <%= @user_hash['admin'] %>],
                      ['Student',       <%= @user_hash['student'] %>],
                      ['Teacher',    <%= @user_hash['teacher'] %>]
                      /*{
                          name: 'Chrome',
                          color: '#f0f0f0',
                          y: 12.8,
                          sliced: true,
                          selected: true
                      },


                      ['Opera',     6.2],
                      ['Others',   0.7]
                      */
                  ]
              }]
          });
      });


  </script>

<body>

<div id="container1" style="min-width: 310px;background: none; height: 400px; max-width: 600px; margin: 0 auto"></div>

</body>
</html>