<div class="row listing-holder listing-holder-p">
  <div class="span5">
    <%= form_for(@board) do |f| %>
        <% if @board.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>

              <ul>
                <% @board.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name,:required => true, :pattern => '^[a-zA-Z]+?[^\\\/:*?"<>|\n\r]+$'  %>
        </div>
        <div class="actions">
          <%= f.submit class: 'btn btn-large btn-inverse'%>
        </div>
    <% end %>
  </div>
  <div class="span5 offset1 nomgtop listing-holder">
    <table class="table table-condensed">
      <th>List of Boards</th>
      <%Board.all.each do |board| %>
          <tr><td><%=board.name%></td></tr>
      <% end %>
    </table>
  </div>
</div>