<%= label_tag :courses %><br />
<table class="table">
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% unless @courses_selected.blank? %>
      <% @courses_selected.each do |course| %>
    <tr>
      <td> <%=course.name %></td>
      <span id="course_error" style="display:none;color:#cc0000"></span>
      <td> <%= check_box_tag 'courses[]', course.id -%></td>
    </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

