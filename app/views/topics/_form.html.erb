<div style="padding: 40px">
<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%=f.label :degree %>
      <select id="degree" name="degree" onchange="generate_courses(this)" required>
        <option value="" selected>Select Degree</option>
        <% Degree.all.each do |degree| %>

            <option value="<%=degree.id%>"><%=degree.name%></option>
        <% end %>
      </select>
    </div>

    <div id="course_container" class="field">
      <%=label_tag :course %>

      <select id="course" name="course" >
        <option>Select Degree First</option>

      </select>
    </div>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name,required: true %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-inverse' %>
  </div>
<% end %>
</div>

<script>
    function generate_courses(degree_id)
    {
        //alert (degree_id.value);
        container = document.getElementById('course_container');
        $.ajax({
            url:'/topics/get_courses?degree_id='+degree_id.value,
            type:'get',
            dataType:'html',
            processData:false,
            success:function (data) {
                $("#course_container").html(data);
                $("#course_container").show();
            },
            error:function (data) {
                alert ('nae chalaa');
                //    window.location.reload();
            }
        });

    }


</script>