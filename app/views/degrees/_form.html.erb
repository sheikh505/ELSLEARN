<div class="container">
  <div class="row  listing-holder-p">
    <div class="col-md-8 mrgr32 listing-holder">
      <table class="table table-condensed">
        <th>List of Certifications</th>
        <th>Board</th>
        <%BoardDegreeAssignment.all.each do |bDegree| %>
            <tr><td><%=bDegree.degree.name%></td>
              <td><%=bDegree.board.name %></td>
            </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-3 pd17 listing-holder">
      <%= form_tag degrees_path, remote: true, id: "create_degree" do |f| %>

        <% Board.all.each do |board| %>
          <%if @boards.find {|x| x.id == board.id} %>
            <%= check_box_tag 'boards[]', board.id,true, :class => 'checkboxes' %><%= board.name %>
          <%else %>
            <%= check_box_tag 'boards[]', board.id,false %><%= board.name %>
          <%end %>
        <% end %>

        <div class="field">
          <%= label_tag :name %>
          <%= text_field_tag :name, "",:required => true, :pattern => '^[a-zA-Z]+?[^\\\/:*?"<>|\n\r]+$'  %>
        </div>
        <div class="field">
          <%= label_tag :enable %>
          <%= radio_button_tag :enable, true  %>
          <%= label_tag "Disable"  %>
          <%= radio_button_tag :enable, false, checked: :checked  %>
        </div>
        <div class="actions">
          <%= submit_tag "Create Certification", class: 'btn btn-large btn-inverse'%>
        </div>
      <% end %>
    </div>

  </div>

</div>
