





<%= form_for :question, :url => questions_path, :html => {multipart: true} do |f| %>

    <div class="field">
      <%= f.label :statement %><br />
      <%= f.text_area :statement,:class => "tinymce" ,:rows => 5, :cols => 10, autofocus: true %>
      <%= tinymce %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description,size: '5x5' %>
    </div>
<% i = 1 %>
    <% 4.times{ %>

        <% puts '<div class="field">' %><br />
          <%= f.label ('option_' + i.to_s).to_sym %>
        <input type="checkbox" id="image_change_<%=i%>" name="image_change_<%=i%>" value="1" onclick="change_field('image_change_<%=i%>','image_<%=i%>','field_<%=i%>')">
        Image
        <input type="checkbox" id="is_answer_<%=i%>" name="is_answer_<%=i%>" value="1">
        Is_Answer
        <br />
        <span id='field_<%=i%>'><%= text_field_tag ('option_' + i.to_s).to_sym %></span>
        <span style="display: none" id='image_<%=i%>'><%= file_field_tag ('option_image_' + i.to_s).to_sym %></span>
        <% i+=1 %>
        </div>

    <% } %>

    <div class="field">
      <%= f.label :instruction %><br />
      <%= f.text_area :instruction, :size => '4x4' %>
    </div>

    <div class="field">
      <%= f.label :source %><br />
      <%= f.text_field :source %>
    </div>

    <div class="field">
      <%= f.label :author %><br />
      <%= f.text_field :author, value: current_user.email %>
    </div>

    <div class="field">
      <%= f.label :Difficulty %><br />
      <select id="difficulty" name="difficulty">
        <option value="1">1</option>
        <option value="2">2</option>
        <option  value="3" selected>3</option>
        <option  value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>

    <%=f.hidden_field :test_id, :value => @dc_hash['test'].id %>
    <%=hidden_field_tag :type_ques, 'mcq'  %>

    <div class="actions">
      <%= f.submit class: 'btn btn-large btn-inverse ' %>
    </div>
<% end %>


<script>
  function change_field(box_id, span_id,field_id)
  {
     // alert(box_id +"-"+ span_id)
    box = document.getElementById(box_id)
      if(box.checked){

        $('#'+span_id).show();
          $('#'+field_id).hide();
      }
      else{
          $('#'+span_id).hide();
          $('#'+field_id).show();
      }

  }

</script>