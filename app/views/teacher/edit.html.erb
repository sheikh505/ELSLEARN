<h2>Register Teacher</h2>
<div class="row">
  <div class="span5">
    <%= form_for @user, :url => {:controller => 'teacher', :action => 'update'} do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this question from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :value => @user.email %>
        </div>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, :value => @user.name %>
        </div>

        <div class="field">
          <%= f.label :phone %><br />
          <%= f.text_field :phone , :value => @user.phone %>
        </div>

        <div class="field">
          <%= f.label :new_password %>
          <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :new_password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>

        </div>

        <div class="field">
          <%= label_tag :current_password_confirmation %><br />
          <%= password_field_tag :current_password_confirmation, autocomplete: "off", value: @user.encrypted_password %>

        </div>
        <div class="field">

          <%= f.hidden_field :role , :value => 'teacher' %>
          <%= hidden_field_tag :id , :value => @user.id %>

        </div>




        <div class="actions">
          <%= f.submit "Register" , class: 'btn btn-large btn-inverse' %>
        </div>
    <% end %>
  </div>
  <div class="span5 offset1">
    <h3>Listed Teachers</h3>
    <% User.all.select {|x| x.is_teacher?}.each do |teacher| %>
        <li>
          <%=teacher.email %>
        </li>
    <% end %>
  </div>
</div>
