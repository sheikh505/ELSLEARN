<% if current_user.is_proofreader? %>
 <h2>Register Operator</h2>
<% else %>
    <h2>Register User</h2>
    <% end %>
<div class="row">
  <div class="span5">
<%= form_for @user, :url => {:controller => 'teacher', :action => 'create'} do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <ul style="color:red">
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email,:required => true, :autofocus=> true ,:class=>'row_field' %>
    </div>

     <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name,:required => true, :pattern => '^[a-zA-Z]+?[^\\\/:*?"<>|\n\r]+$' ,:class=>'row_field' %>
     </div>

        <div class="field">
          <%= f.label :phone %>
          <%= f.phone_field :phone ,:required => true,:class=>'row_field' %>
        </div>

    <div class="field">
      <%= f.label :password %>
      <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" ,:required => true,:class=>'row_field' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" ,:required => true,:class=>'row_field' %>

    </div>
    <div class="field">
      <%= f.label :role %>
      <select id="role_id" name="role_id" class="row_field"  onchange="on_roll_change();">
        <option value="0">Please select role for User</option>
        <%@roles.each do |x| %>
            <% if current_user.is_proofreader? %>
                <script type="application/javascript" >
                    $( document ).ready(function() {
                        $("#role_id").prop("disabled", true);
                    });
                </script>
                <option value="<%=x.id%>" selected><%=x.name%></option>
            <% else %>
                <option value="<%=x.id%>"><%=x.name%></option>
            <% end %>
        <% end %>
      </select>

    </div>


    <div id="proofreader_all" class="field" style="display: none;">
      <%= f.label "Proof Reader" %>
      <select id="user_role" name="user[role]" class="row_field">
        <option value="0">Please select Proof Reader</option>
        <%@proofreaders.each do |proofreader| %>
            <% if current_user.is_proofreader? && current_user.id == proofreader.id %>
                <option value="<%=proofreader.id%>" selected><%=proofreader.email%></option>
            <% else %>
                <option value="<%=proofreader.id%>"><%=proofreader.email%></option>
            <% end %>
        <% end %>
      </select>

    </div>
    <div class="actions">
      <%= f.submit "Register", :class => 'btn btn-large btn-inverse' %>
    </div>
<% end %>
</div>
    <div class="span5 offset1">
      <% if current_user.is_proofreader? %>
        <h3>Listed Operators</h3>

        <% User.where(:role => current_user.id.to_s).each do |opertaor| %>
        <li>
          <%=opertaor.email %>
        </li>
        <% end %>
      <% else %>
          <h3>Listed Users</h3>
          <div class="usersList">
          <% User.all.each do |teacher| %>
              <li>
                <%=teacher.email %>
              </li>
          <% end %>
            </div>
          </div>
      <% end %>
    </div>
<div id="courseList_all" style="display: none;" class="field courseList_all">
  <table class="table">
    <thead>
        <tr>
          <th>Course</th>
          <th>Action</th>
        </tr>
    </thead>
    <tbody>
    <%@courses.each do |x| %>
        <tr>
          <td>
            <span><%=x.name %></span>
          </td>
          <td>
            <%= check_box_tag "course[]", x.id,false %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div id="degreeList" style="display: none;" class="field row">
  <%=label_tag :degree%>

  <%@degrees.each_with_index do |degree,index| %>
      <div class="col_deg col-md-3">
        <%= check_box_tag 'degree[]'+degree.id.to_s, degree.id,false, :onclick => "show_courses(this);" %><%=degree.name %>
        <div id="courseList_<%= degree.id %>" class="field courseList_post">

        </div>
      </div>

  <% end %>

</div>









<script>

    $( document ).ready(function() {
        if ($("#role_id option:selected").text() == "Teacher")
        {
            var $checkBoxes = $('input[type="checkbox"]');
            $checkBoxes.prop('checked',false);
            $("#degreeList").show();
            $(".courseList_post").hide();
        }
        else if ($("#role_id option:selected").text() == "Hod")
        {
            $("#courseList").show();
        }

    });
    function on_roll_change() {
        if ($("#role_id option:selected").text() == "Teacher")
        {
            $("#degreeList").show();
            $(".courseList_post").hide();
            $("#courseList_all").hide();
            $("#proofreader_all").hide();

        }
        else if ($("#role_id option:selected").text() == "Hod")
        {
            $("#courseList_all").show();
            $("#degreeList").hide();
            $("#proofreader_all").hide();
        }
        else if ($("#role_id option:selected").text() == "Operator")
        {
            $("#proofreader_all").show();
        }
        else
        {
            $("#courseList_all").hide();
            $("#courseList").hide();
            $("#degreeList").hide();
            $("#proofreader_all").hide();
        }
    }

    function show_courses(object)
    {
        if (object.checked) {
            $.ajax({
                url: '/courses/get_courses_by_degree_id?degree_id=' + object.value,
                type: 'get',
                dataType: 'html',
                processData: false,
                success: function (data) {
                    $("#"+"courseList_"+object.value).show();
                    $("#"+"courseList_"+object.value).html(data);
                },
                error: function (data) {
                    alert("Error Occurred");
                }
            });
        }
        else
            $("#"+"courseList_"+object.value).hide();

    }


</script>