<% if current_user.is_admin? %>
    <%= link_to "Manage Tests", quizzes_path, class: "btn btn-primary" %> |
    <%= link_to "Comment Feedback", "/comment_feedback", class: "btn btn-primary" %> |
    <%= link_to "Video Feedback", "/check_quiz", class: "btn btn-primary" %>
<% end %>

<h1>Student's Quizzes</h1>

<div class="listing-holder">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Student name</th>
      <th>Quiz name</th>
      <th>Course</th>
      <th>No. of Questions</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @tests.each do |test| %>
        <tr>
          <td><%= @students.select{|student| test.user_id == student.id}.first.name if @students.select{|student| test.user_id == student.id}.first %></td>
          <td><%= test.quiz_name %></td>
          <td><%= @courses.select{|course| test.course_id == course.id}.first.name %></td>
          <td><%= test.descriptive.split(',').count %></td>
          <td><%= link_to "Review Test", "/student_test?test_id=#{test.id}" %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>